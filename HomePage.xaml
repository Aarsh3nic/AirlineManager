<Window x:Class="Midterm_CS.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midterm_CS"
        mc:Ignorable="d"
        Title="HomePage" Height="262" Width="598">
    <Grid>
        <DockPanel LastChildFill="False" Margin="0,0,0,193">
            <Menu x:Name="mainMenu" Width="181.57">
                <MenuItem x:Name="menuFile" FontWeight="Bold" FontSize="15" Header="File">
                    <MenuItem x:Name="menuNew" FontSize="13" Header="New" FontWeight="Normal"/>
                    <MenuItem x:Name="menuSave" FontWeight="Normal" FontSize="13" Header="Save"/>
                    <MenuItem x:Name="menuQuit" FontSize="13" Header="Quit" Click="menuQuit_Click"/>
                </MenuItem>
                <MenuItem x:Name="menuEdit" FontWeight="Bold" FontSize="15" Header="Edit">
                    <MenuItem x:Name="menuInsert" FontWeight="Normal" FontSize="13" Header="Insert" Click="menuInsert_Click"/>
                    <MenuItem x:Name="menuUpdate" FontWeight="Normal" FontSize="13" Header="Update" Click="menuUpdate_Click"/>
                    <MenuItem x:Name="menuDelete" FontWeight="Normal" FontSize="13" Header="Delete" Click="menuDelete_Click"/>
                </MenuItem>
                <MenuItem x:Name="menuHelp" FontWeight="Bold" FontSize="15" Header="Help" Click="menuHelp_Click"/>
                <MenuItem x:Name="menuGoto" Header="Go To" FontWeight="Bold" FontSize="15">
                    <MenuItem x:Name="menuCustomers" FontWeight="Normal" FontSize="13" Header="View Customers" Click="menuCustomers_Click"/>
                    <MenuItem x:Name="menuFlights" FontWeight="Normal" FontSize="13" Header="View Flights" Click="menuFlights_Click"/>
                    <MenuItem x:Name="menuAirlines" FontWeight="Normal" FontSize="13" Header="View Airlines" Click="menuAirlines_Click"/>
                    <MenuItem x:Name="menuPassengers" FontWeight="Normal" FontSize="13" Header="View Passengers" Click="menuPassengers_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <StackPanel Margin="0,92,0,0" Orientation="Horizontal">
            <Button x:Name="btnCustomers" Content="View Customers" Height="40" Margin="15,0,15,0" Padding="5,5,5,5" FontWeight="Bold" FontFamily="Corbel" FontSize="15" BorderThickness="3,3,3,3" Click="btnCustomers_Click" />
            <Button x:Name="btnFlights" Content="View Flights" Height="40" Margin="15,0,15,0" Padding="5,5,5,5" FontFamily="Corbel" FontWeight="Bold" FontSize="15" BorderThickness="3,3,3,3" Click="btnFlights_Click"/>
            <Button x:Name="btnAirlines" Content="View Airlines" Height="40" Margin="15,0,15,0" Padding="5,5,5,5" FontSize="15" FontFamily="Corbel" FontWeight="Bold" BorderThickness="3,3,3,3" Click="btnAirlines_Click"/>
            <Button x:Name="btnPassengers" Content="View Passengers" Height="40" Margin="15,0,15,0" Padding="5,5,5,5" FontFamily="Corbel" FontWeight="Bold" FontSize="15" BorderThickness="3,3,3,3" Click="btnPassengers_Click"/>
        </StackPanel>
        <Label Content="Select an Option :" HorizontalAlignment="Center" Margin="0,56,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Foreground="#FF1750EE" FontSize="18"/>
        <Label x:Name="lblMode" Content="Label" HorizontalAlignment="Left" Margin="446,38,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Window>
