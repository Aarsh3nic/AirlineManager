<Window x:Class="Midterm_CS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midterm_CS"
        mc:Ignorable="d"
        Title="LoginWindow" Height="215" Width="277">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="182*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>

        <Label Content="Username:" HorizontalAlignment="Left" Margin="16,14,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="18,43,0,0" VerticalAlignment="Top" Height="26" Width="62"/>
        <PasswordBox x:Name="pbPass" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" Width="144" Grid.Column="1" Height="18" TabIndex="2" Password="pwdpateaars"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="78" Click="btnLogin_Click" Height="20" Grid.Row="1" />
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="74,84,0,0" VerticalAlignment="Top" Width="89" Click="btnCancel_Click" Grid.Column="1" Height="20" Grid.Row="1"/>
        <TextBox x:Name="tbUser" HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" UndoLimit="98" Grid.Column="1" Height="18" TabIndex="1" Text="pateaars"/>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="18,8,0,0" VerticalAlignment="Top" Grid.Row="1" Height="25" Width="24"/>
        <Label Content="SuperUser:" HorizontalAlignment="Left" Margin="18,38,0,0" VerticalAlignment="Top" Grid.Row="1" Height="25" Width="67"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Center" Margin="0,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" Grid.Column="1" Grid.Row="1" Height="17" TabIndex="3" Text="10"/>
        <TextBox x:Name="txtSuperUser" HorizontalAlignment="Center" Margin="0,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Grid.Column="1" Grid.Row="1" Height="17" TabIndex="4" Text="1"/>

    </Grid>
</Window>
